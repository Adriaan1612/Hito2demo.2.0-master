<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.empresa.hito2demo.RegisterController">
    <Text text="Registro" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #4CAF50;" />
    <VBox alignment="CENTER" spacing="5">
        <Text text="Usuario" style="-fx-font-size: 14px;"/>
        <TextField fx:id="usernameField" promptText="Ingrese su usuario" style="-fx-font-size: 14px;" />
    </VBox>
    <VBox alignment="CENTER" spacing="5">
        <Text text="Contraseña" style="-fx-font-size: 14px;"/>
        <PasswordField fx:id="passwordField" promptText="Ingrese su contraseña" style="-fx-font-size: 14px;" />
    </VBox>
    <Button text="Registrar" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;" onAction="#handleRegister" />
</VBox>
